<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="main" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ac.unindra.roemah_duren_spring.controller.BranchController">
   <children>
      <VBox style="-fx-background-color: #AFB8C133;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox>
               <padding>
                  <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
               </padding>
               <children>
                  <Label text="Cabang">
                     <font>
                        <Font name="Arial Bold" size="24.0" />
                     </font>
                  </Label>
                  <VBox prefHeight="243.0" prefWidth="552.0" style="-fx-background-color: #fffffe; -fx-background-radius: 8;">
                     <VBox.margin>
                        <Insets bottom="12.0" top="12.0" />
                     </VBox.margin>
                     <children>
                        <Label text="Form Cabang">
                           <font>
                              <Font name="Arial Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nameField" promptText="Nama Cabang">
                           <VBox.margin>
                              <Insets bottom="2.0" top="12.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="nameLabelError" prefHeight="0.0" styleClass="danger" />
                        <TextArea fx:id="addressField" prefHeight="200.0" prefWidth="528.0" promptText="Alamat">
                           <padding>
                              <Insets bottom="4.0" />
                           </padding>
                           <VBox.margin>
                              <Insets bottom="2.0" top="12.0" />
                           </VBox.margin>
                        </TextArea>
                        <Label fx:id="addressLabelError" styleClass="danger" />
                        <TextField fx:id="mobilePhoneField" layoutX="22.0" layoutY="51.0" promptText="Nomor Telepon">
                           <VBox.margin>
                              <Insets bottom="2.0" top="12.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="mobilePhoneLabelError" styleClass="danger" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="submitBtn" graphicTextGap="8.0" mnemonicParsing="false" onAction="#handleSubmit" styleClass="accent" text="Submit">
                                 <HBox.margin>
                                    <Insets right="8.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="resetBtn" graphicTextGap="8.0" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleReset" styleClass="danger" text="Reset">
                                 <HBox.margin>
                                    <Insets right="8.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="removeBtn" graphicTextGap="8.0" layoutX="79.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleDelete" styleClass="danger" text="Hapus" />
                           </children>
                           <VBox.margin>
                              <Insets right="8.0" top="18.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                     </padding>
                  </VBox>
                  <VBox style="-fx-background-color: #fffffe; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="List Cabang">
                           <font>
                              <Font name="Arial Bold" size="18.0" />
                           </font>
                        </Label>
                        <TableView fx:id="tableBranch" styleClass="edge-to-edge" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="noCol" prefWidth="75.0" text="No" />
                            <TableColumn fx:id="nameCol" prefWidth="148.0" text="Nama Cabang" />
                              <TableColumn fx:id="addressCol" minWidth="2.0" prefWidth="133.0" text="Alamat" />
                              <TableColumn fx:id="mobilePhoneNoCol" minWidth="0.0" prefWidth="162.0" text="Nomor Telepon" />
                          </columns>
                           <VBox.margin>
                              <Insets top="12.0" />
                           </VBox.margin>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Pagination fx:id="pagination" maxPageIndicatorCount="5" pageCount="5" prefHeight="86.0" prefWidth="528.0" VBox.vgrow="NEVER" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
