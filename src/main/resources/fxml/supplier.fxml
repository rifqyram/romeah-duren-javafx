               <padding>
                  <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
               </padding>
               <children>
                  <Label text="Manajemen Supplier">
                     <font>
                        <Font name="Arial Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="14.0" />
                     </VBox.margin>
                  </Label>
                  <GridPane prefHeight="35.0" prefWidth="358.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Button fx:id="buttonModalAdd" mnemonicParsing="false" onAction="#openModalAdd" prefHeight="31.0" prefWidth="162.0" styleClass="accent" text="Tambah Supplier" GridPane.halignment="RIGHT" />
