                                       <HBox.margin>
                                          <Insets left="14.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                        <TableView fx:id="tableSupplier" prefWidth="528.0" styleClass="edge-to-edge" VBox.vgrow="ALWAYS">
