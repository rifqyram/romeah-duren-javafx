<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox style="-fx-background-color: #AFB8C133;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
         </padding>
         <children>
            <Label text="Pelanggan">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
            <VBox prefHeight="243.0" prefWidth="552.0" style="-fx-background-color: #fffffe; -fx-background-radius: 8;">
               <VBox.margin>
                  <Insets bottom="12.0" top="12.0" />
               </VBox.margin>
               <children>
                  <Label text="Form Pelanggan">
                     <font>
                        <Font name="Arial Bold" size="18.0" />
                     </font>
                  </Label>
                  <TextField promptText="Nama Cabang">
                     <VBox.margin>
                        <Insets bottom="12.0" top="12.0" />
                     </VBox.margin>
                  </TextField>
                  <TextArea prefHeight="200.0" prefWidth="528.0" promptText="Alamat">
                     <padding>
                        <Insets bottom="4.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="12.0" />
                     </VBox.margin>
                  </TextArea>
                  <TextField layoutX="22.0" layoutY="51.0" promptText="Nomor Telepon">
                     <VBox.margin>
                        <Insets bottom="12.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" styleClass="accent" text="Submit">
                           <HBox.margin>
                              <Insets right="8.0" />
                           </HBox.margin>
                        </Button>
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" styleClass="danger" text="Reset" />
                     </children>
                     <VBox.margin>
                        <Insets right="8.0" top="18.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #fffffe; -fx-background-radius: 8;">
               <children>
                  <Label text="List Pelanggan">
                     <font>
                        <Font name="Arial Bold" size="18.0" />
                     </font>
                  </Label>
                  <TableView prefHeight="200.0" prefWidth="200.0" styleClass="edge-to-edge">
                    <columns>
                      <TableColumn prefWidth="75.0" text="No" />
                      <TableColumn prefWidth="148.0" text="Nama Cabang" />
                        <TableColumn minWidth="2.0" prefWidth="133.0" text="Alamat" />
                        <TableColumn minWidth="0.0" prefWidth="162.0" text="Nomor Telepon" />
                    </columns>
                     <VBox.margin>
                        <Insets top="12.0" />
                     </VBox.margin>
                  </TableView>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
